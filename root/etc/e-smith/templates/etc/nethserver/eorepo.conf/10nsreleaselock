    $lock = $sysconfig{'NsReleaseLock'} || 'disabled';
    if ($lock eq 'enabled') {
        @repos = (
            "ce-base",
            "ce-updates",
            "ce-extras",
            "epel",
            "ce-sclo-rh",
            "ce-sclo-sclo",
            "nethserver-base",
            "nethserver-updates",
            "nethforge"
        );
    }

    '';
}