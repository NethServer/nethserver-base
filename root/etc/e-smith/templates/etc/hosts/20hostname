#
# 20hostname(s)
#
{ 
    use esmith::InterfacesDB;
    my $ndb = esmith::InterfacesDB->open_ro() || return;
    foreach ($ndb->green()) {
        if($_->prop('ipaddr') && ($_->prop('bootproto') || '') ne 'dhcp') {
            $OUT .= sprintf "%-18s\t%s\n", $_->prop('ipaddr'), join(' ', @hostnames);
        }
    }
}


