{
    #
    # include chain file
    #

    $OUT = '';

    my $file = $pki{ChainFile} || "";

    if( ! $file) {
        return '';
    }

    # Perlish way to slurp a text file:
    $OUT = do {
        local $/ = undef;
        open my $fh, "<", $file
            or warn "[WARNING] could not open SSL chain file $file: $!\n";
        <$fh>;
    };

}
