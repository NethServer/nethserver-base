if ! [ $# -ge 3 ]; then
   echo "[ERROR] Not enough arguments."
   exit 2
fi

EVENT=$1
USER=$2
FILE=$3

# Check if the user is inside the passwd
/usr/bin/grep -q "^$USER:" /etc/passwd

if [[ $? -gt 0 ]]; then
    # Skipping user if it belongs to a domain
    exit 0
fi

if ! [ -f "${FILE}" ]; then
    echo "[ERROR] Password file not found"
    exit 1
fi

PASSWORD="$(<$FILE)"
/usr/bin/passwd --stdin "$USER" <<EOF
${PASSWORD}
${PASSWORD}
EOF
